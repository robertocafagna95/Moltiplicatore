try:
  print("Benvenuti al programma \'Moltiplicatore\'\n")
  print("Restituisce in output il risultato di una moltiplicazione tra due numeri!\n")

  a = float(input("Inserisci il primo valore => "))
  b = float(input("Inserisci il secondo valore => "))

except ValueError:
  print("\nErrore: devi inserire solo numeri!")

else:
  print(f"\nIl risultato Ã¨ {a * b}")
